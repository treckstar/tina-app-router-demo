{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@nerdfish-website/tsconfig/react-library.json",
  "compilerOptions": {
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~/content/*": [
        "content/*"
      ],
      "~/tina/*": [
        "tina/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "verbatimModuleSyntax": false,
    "strictNullChecks": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": [
    "./**/*.js",
    "./**/*.ts",
    "./**/*.tsx",
    ".forestry/config.ts",
    ".forestry/types.ts",
    ".next/types/**/*.ts",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.cjs",
    "tina/**/*.ts",
    "tina/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "public",
    "tina/__generated__"
  ]
}
